# bind key:modifiers operation parameter+

alias key alt

bind r:${key} relaunch

bind a:${key} move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
bind d:${key} move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
bind s:${key} move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
bind w:${key} move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
bind x:${key} move screenOriginX;screenOriginY screenSizeX;screenSizeY

bind h:${key} hint asdfghjkl

# Application shortcuts
# bind v:${key} shell path:~/ '/usr/local/bin/mvim'
bind f:${key} focus "Firefox"
bind g:${key} focus "Safari"
bind v:${key} focus "MacVim"
bind k:${key} focus "Skim"
bind p:${key} focus "Preview"
bind m:${key} focus "Mathematica"
bind l:${key} focus "Calendar"
bind t:${key} focus "iTerm"
bind i:${key} focus "Adium"
bind y:${key} focus "Sublime Text 2"
bind e:${key} focus "Europa Notebook"
bind o:${key} focus "OmmWriter"

